@{
  Layout = "_Layout";
}

@using BestRestaurants.Models
@model List<Restaurant>

<h2>Your search results:</h2>

@if (Model.Count == 0)
{
  <p>Nothing found</p>  
}

@foreach (Restaurant restaurant in Model)
{
  <h3>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</h3>
}

<p>@Html.ActionLink("Return to restaurant list", "Index")<p>
