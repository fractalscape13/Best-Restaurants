@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h3>Add a new restaurant<h3>
<div class="col-md-8 offset-md-2">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @class="form-control"})
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.Address)
      @Html.TextBoxFor(model => model.Address, new { @class="form-control"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Hours)
      @Html.TextBoxFor(model => model.Hours, new { @class="form-control"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.KeyWords)
      @Html.TextBoxFor(model => model.KeyWords, new { @class="form-control"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Cuisine)
      @Html.DropDownList("CuisineId",  (IEnumerable<SelectListItem>)ViewBag.PriorityID, new {@class="form-control"})
    </div>

    <input type="submit" value="Add restaurant" class="btn">
  }
</div>

<p>@Html.ActionLink("Show all restaurants", "Index")</p>